# Google OAuth Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Session Secret (generate a random string)
SESSION_SECRET=change-this-to-a-random-string

# Server
PORT=3001
FRONTEND_URL=http://localhost:5173

# Linera Testnet Conway
LINERA_FAUCET_URL=https://faucet.testnet-conway.linera.net
USE_MOCK_LINERA=false

# EVM Oracle Bridge (Base/Ethereum)
# Private key for signing score commitments (generate a new wallet for this)
EVM_SIGNER_PRIVATE_KEY=0x...your-private-key
# Address of deployed KYAScoreVerifier contract on Base Sepolia
KYA_VERIFIER_ADDRESS=0x...deployed-contract-address
